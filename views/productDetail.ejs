<section class="product">
  <div class="container product__container">
    <div class="product__image">
      <img src="<%= product.imgSrc %>" alt="<%= product.title %>" class="product__image_content" />
    </div>
    <div class="product__info">
      <h1 class="product__title"><%= product.title %></h1>
      <p class="product__price">$<%= product.price %></p>
      <p class="product__description"><%= product.description %></p>
      <form action="/cart/add-item" method="post">
        <input type="hidden" name="productId" value="<%= product.id %>" />
        <button class="button button--xl product__button">
          Agregar al Carrito
        </button>
      </form>
      <div class="separator product__separator"></div>
      <div class="product__features">
        <h2 class="product__features_title">
          Caracter√≠sticas
        </h2>
        <ul class="product__features_list">
          <% for (const feature of product.features) { %>
          <li><%= feature %></li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</section>