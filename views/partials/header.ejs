<div class="container header-main">
  <div class="header-main__top">
    <a href="/">
      <img src="/images/fullstock-logo.svg" alt="FullStock inicio" width="128" height="32" />
    </a>
    <div class="header-actions">
      <a href="/cart" class="button button--ghost button--xl-icon header-actions__cart" aria-label="Carrito de compras">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="lucide lucide-shopping-cart">
          <circle cx="8" cy="21" r="1" />
          <circle cx="19" cy="21" r="1" />
          <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12" />
        </svg>
        <% if (cartItemCount > 0) { %>
          <span class="header-actions__cart-badge">
            <%= cartItemCount %>
          </span>
          <% } %>
      </a>
    </div>
  </div>
  <div class="separator header-main__separator"></div>
  <nav aria-label="NavegaciÃ³n principal" class="main-nav">
    <ul class="main-nav__list" role="menubar">
      <% for (const category of categories) { %>
        <li class="main-nav__item" role="none">
          <a href="/<%= category.slug %>" role="menuitem"
            class="main-nav__link <%= activePage === category.slug ? 'main-nav__link--active' : '' %>">
            <%= category.title %>
          </a>
        </li>
        <% } %>
    </ul>
  </nav>
</div>